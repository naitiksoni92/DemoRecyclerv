<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="1dp"
        card_view:cardElevation="4dp">

        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="#FE7E13"
            android:id="@+id/view"
            android:visibility="visible" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:background="#edebeb">


            <TextView
                android:id="@+id/lbl_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="genreeeee"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/lbl_id"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/lbl_id"
                android:textColor="@color/title"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="titleeeeeee"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/lbl_hours"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/lbl_name"
                android:textColor="@color/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="yearrrrrr"
                android:layout_below="@+id/lbl_id"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="carnoo"
                android:id="@+id/lbl_carno"
                android:layout_marginTop="20dp"
                android:textColor="@color/year"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/lbl_name"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="carmodelll"
                android:id="@+id/lbl_carmodel"
                android:textColor="@color/year"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/lbl_carno"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="carcompanyyy"
                android:id="@+id/lbl_carcmpny"
                android:textColor="@color/year"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/lbl_carmodel"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="#dddbdb">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:id="@+id/btnMail"
                    android:background="@drawable/email"
                    android:layout_marginBottom="3dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:id="@+id/btnMessage"
                    android:background="@drawable/sms"
                    android:layout_marginBottom="3dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:id="@+id/btnCall"
                    android:background="@drawable/call"
                    android:layout_marginBottom="3dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:id="@+id/btnGmail"
                    android:background="@drawable/chat"
                    android:layout_marginBottom="2dp" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>